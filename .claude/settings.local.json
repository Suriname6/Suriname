{
  "project": {
    "name": "Suriname Customer Management System",
    "type": "fullstack",
    "backend": "Spring Boot",
    "frontend": "React",
    "database": "MySQL"
  },
  "development": {
    "ports": {
      "backend": 8081,
      "frontend": 5173,
      "fallback_backend": 8082,
      "fallback_frontend": 5174
    }
  },
  "tools": {
    "enabled": ["context7", "sequential", "magic", "playwright"],
    "preferences": {
      "auto_port_management": true,
      "css_scope_validation": true,
      "git_safety_mode": true
    }
  },
  "team": {
    "authority": "delivery_management",
    "member": "박재엽",
    "restricted_areas": [
      "customer_management",
      "payment_system", 
      "repair_system",
      "analytics_dashboard",
      "employee_management"
    ]
  },
  "permissions": {
    "allow": [
      "PowerShell(*)",
      "Cmd(*)",
      "Bash(*)",
      "Write(**/*)",
      "Read(**/*)",
      "Delete(**/*)"
    ],
    "deny": [
      "PowerShell(Remove-Item -Path C:\\ -Recurse -Force)",
      "PowerShell(Format-Volume *)",
      "PowerShell(Restart-Computer *)",
      "PowerShell(Stop-Computer *)",
      "Cmd(format c:)",
      "Cmd(del /f /s /q c:\\*)",
      "Cmd(shutdown *)",
      "Cmd(restart *)",
      "Bash(rm -rf /)",
      "Write(C:\\Windows\\**/*)",
      "Write(C:\\Program Files\\**/*)",
      "Write(C:\\System32\\**/*)",
      "Delete(C:\\Windows\\**/*)",
      "Delete(C:\\Program Files\\**/*)",
      "Delete(C:\\System32\\**/*)"
    ]
  },
  "autoApproval": {
    "enabled": true,
    "allowAll": true,
    "patterns": ["*"],
    "filePatterns": ["**/*"],
    "commandPatterns": ["*"],
    "windowsCommands": [
      "npm *", "yarn *", "git *", "docker *", "python *", "pip *",
      "node *", "code *", "start *", "cd *", "dir *", "ls *",
      "mkdir *", "copy *", "move *", "echo *", "gradlew *"
    ],
    "exclusions": [
      "format *", "del /f /s /q c:\\*", "shutdown *", "restart *",
      "Remove-Item -Path C:\\ -Recurse -Force"
    ]
  },
  "projectSettings": {
    "name": "Suriname Customer Management System",
    "type": "Spring Boot + React",
    "description": "Customer Service Management System - Windows Environment",
    "autoApprovalMode": "aggressive",
    "securityLevel": "development",
    "platform": "windows",
    "shell": "powershell",
    "mainPorts": [8081, 5173, 8082, 5174],
    "databases": ["mysql"],
    "frameworks": ["spring-boot", "react", "vite", "gradle"],
    "devCommands": {
      "frontend": "cd suriname-frontend && npm run dev",
      "backend": "cd suriname-backend && .\\gradlew bootRun",
      "database": "mysql service start",
      "browser": "start chrome http://localhost:5173",
      "all": "npm run dev"
    },
    "windowsSpecific": {
      "useWSL": false,
      "powerShellExecution": true,
      "cmdExecution": true,
      "bashExecution": true,
      "autoOpenBrowser": true,
      "browserCommand": "start chrome",
      "pathSeparator": "\\",
      "driveLetters": ["C:", "D:", "E:"],
      "shortcuts": {
        "openVSCode": "code .",
        "openTerminal": "start powershell",
        "openBrowser": "start chrome"
      }
    },
    "approvalSettings": {
      "autoApproveFileCreation": true,
      "autoApproveFileModification": true,
      "autoApproveFileDeletion": true,
      "autoApprovePackageInstallation": true,
      "autoApproveGitOperations": true,
      "autoApproveServerCommands": true,
      "autoApproveDatabaseOperations": true,
      "autoApproveDockerOperations": true,
      "autoApproveEnvironmentChanges": true,
      "autoApproveConfigChanges": true,
      "autoApprovePowerShellCommands": true,
      "autoApproveCmdCommands": true,
      "confirmDestructiveOperations": false,
      "bypassSecurityWarnings": true
    }
  },
  "advancedSettings": {
    "globalAutoApproval": true,
    "skipConfirmations": true,
    "fastMode": true,
    "developerMode": true,
    "verboseLogging": false,
    "silentApprovals": true,
    "backgroundExecution": true,
    "parallelOperations": true,
    "optimisticApprovals": true,
    "trustAllOperations": true,
    "windowsCompatibility": true
  },
  "shortcuts": {
    "approveAll": "ctrl+shift+a",
    "skipToNext": "ctrl+shift+s",
    "fastExecution": "ctrl+shift+f",
    "silentMode": "ctrl+shift+q",
    "openPowerShell": "ctrl+shift+p",
    "openCmd": "ctrl+shift+c"
  },
  "metadata": {
    "version": "2.1.0-windows",
    "lastUpdated": "2024-08-07",
    "approvalMode": "maximum",
    "warningLevel": "minimal",
    "platform": "windows",
    "description": "윈도우 환경용 완전 자동 승인 모드 - Suriname 프로젝트 전용"
  }
}